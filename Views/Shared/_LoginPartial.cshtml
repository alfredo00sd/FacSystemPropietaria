@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-info", title = "Manage" })
        </li>
        |
        <li>
            <a class="btn btn-danger" href="javascript:document.getElementById('logoutForm').submit()">Cerrar session</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Iniciar session", "Login", "Account", routeValues: null, htmlAttributes: new {@class = "btn btn-success", id = "loginLink" })</li>
    </ul>
}
