<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - AlfredSystems.com</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-primary">
            @Html.ActionLink("Zorb FacSystem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <!-- Name Page Controller  -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <span class="nav-link">@Html.ActionLink("Gestion de clientes", "Create", "Customers")</span>  
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">@Html.ActionLink("Gestion de productos", "Create", "Items")</span>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">@Html.ActionLink("Gestion de empleados", "Create", "Employees")</span>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">@Html.ActionLink("Gestion de facturas", "Create", "Bills")</span>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">@Html.ActionLink("Sobre nosotros", "About", "Home")</span>
                    </li>
                    <li class="nav-item">
                        <span class="nav-link">@Html.ActionLink("Contacto", "Contact", "Home")</span>
                    </li>
                </ul>
                <span class="navbar-text">
                    @Html.Partial("_LoginPartial")
                </span>
            </div>
        </nav>

        <div class="container body-content">
            @RenderBody()
            
            <hr />


            <footer>
                <p>&copy; @DateTime.Now.Year - AlfredSystems.com</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
