@model IEnumerable<FacSystemPropietaria.Models.Employee>
@{
    FacSystemPropietaria.Models.Employee employee = new FacSystemPropietaria.Models.Employee();
}  

@{
    ViewBag.Title = "Gestion";
}

<div class="row">
    <div class="col col-md-6">
        <span class="btn btn-info">
            @Html.ActionLink("Regresar", "Index", "Home")
        </span>
    </div>
    <div class="col col-md-6">
        <h2 class="text-lg-right">Gestion de empleado</h2>
    </div>
</div>

<hr />
    
<div class="row">
    <div class="col col-md-4">
        @using (Html.BeginForm())
         {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => employee.Cedula, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => employee.Cedula, new { htmlAttributes = new { @maxlength = "11", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => employee.Cedula, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => employee.Name, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => employee.Name, new { htmlAttributes = new { @maxlength = "150", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => employee.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => employee.Title, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => employee.Title, new { htmlAttributes = new { @maxlength = "50", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => employee.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => employee.Commision_percentage, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => employee.Commision_percentage, new { htmlAttributes = new { @type = "range", @min = "1", @max = "100", @step = "2", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => employee.Commision_percentage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            <input type="submit" value="Guardar" class="btn btn-success btn-block" />
                        </div>
                    </div>
                </div>

            </div>
         }
    </div>
    <div class="col col-md-7">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Creation_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Commision_percentage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    Accion
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creation_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commision_percentage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        <span class="btn btn-warning btn-block">
                            @Html.ActionLink("Modificar", "Edit", new { id = item.Id })
                        </span>
                        <span class="btn btn-danger btn-block">
                            @Html.ActionLink("Desvincular", "Delete", new { id = item.Id })
                        </span>
                    </td>
                </tr>
             }
        </table>

    </div>
</div>

@section Scripts {@Scripts.Render("~/bundles/jqueryval")}
