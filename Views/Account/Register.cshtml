@model FacSystemPropietaria.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col col-md-6">
        <span class="btn btn-info">
            @Html.ActionLink("Regresar", "Login")
        </span>
    </div>
    <div class="col col-md-6">
        <h2 class="text-lg-right">Registro de nueva cuenta.</h2>
    </div>
</div>

<hr />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.Cedula, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Employee.Cedula, new { htmlAttributes = new { @maxlength = "11", @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Employee.Cedula, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Employee.Name, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Employee.Name, new { htmlAttributes = new { @maxlength = "150", @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Employee.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Employee.Title, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Employee.Title, new { htmlAttributes = new { @maxlength = "50", @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Employee.Title, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="col col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.Commision_percentage, new { @class = "col-md-12 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Employee.Commision_percentage, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-success btn-block" value="Registrar" />
                </div>
            </div>

        </div>

    </div>
   

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
