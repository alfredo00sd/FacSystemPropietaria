@model FacSystemPropietaria.Models.Customer

@{
    ViewBag.Title = "Editar";
}

<div class="row">
    <div class="col col-md-6">
        <span class="btn btn-info">
            @Html.ActionLink("Regresar", "Create")
        </span>
    </div>
    <div class="col col-md-6">
        <h2 class="text-lg-right">Modificar empleado</h2>
    </div>
</div>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal bg-light">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <b>
                @Html.LabelFor(model => model.Comercial_name_or_social_reason, htmlAttributes: new { @class = "control-label col-md-2" })
            </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comercial_name_or_social_reason, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comercial_name_or_social_reason, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>
                @Html.LabelFor(model => model.RNC_or_cedula, htmlAttributes: new { @class = "control-label col-md-2" })
            </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RNC_or_cedula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RNC_or_cedula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>
                @Html.LabelFor(model => model.Accountable_account, htmlAttributes: new { @class = "control-label col-md-2" })
            </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Accountable_account, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Accountable_account, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>
                @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-6" })
            </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-warning btn-block" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
