@model IEnumerable<FacSystemPropietaria.Models.Customer>
@{
    var customer = new FacSystemPropietaria.Models.Customer();
}

@{
    ViewBag.Title = "Gestion";
}

<div class="row">
    <div class="col col-md-6">
        <span class="btn btn-info">
            @Html.ActionLink("Regresar", "Index", "Home")
        </span>
    </div>
    <div class="col col-md-6">
        <h2 class="text-lg-right">Gestion de clientes</h2>
    </div>
</div>

<hr />

<div class="row">
    <div class="col col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => customer.Comercial_name_or_social_reason, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => customer.Comercial_name_or_social_reason, new { htmlAttributes = new { @maxlength = "150", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => customer.Comercial_name_or_social_reason, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => customer.RNC_or_cedula, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => customer.RNC_or_cedula, new { htmlAttributes = new { @maxlength = "11", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => customer.RNC_or_cedula, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => customer.Accountable_account, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => customer.Accountable_account, new { htmlAttributes = new { @maxlength = "15", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => customer.Accountable_account, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            <input type="submit" value="Guardar" class="btn btn-success btn-block" />
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
    <div class="col col-md-7">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comercial_name_or_social_reason)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RNC_or_cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accountable_account)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    Accion
                </th>
            </tr>

            @foreach (var item in Model)
             {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comercial_name_or_social_reason)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RNC_or_cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Accountable_account)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        <span class="btn btn-warning btn-block">
                            @Html.ActionLink("Modificar", "Edit", new { id = item.Id })
                        </span>
                        <span class="btn btn-danger btn-block">
                            @Html.ActionLink("Desvincular", "Delete", new { id = item.Id })
                        </span>
                    </td>
                </tr>
             }
        </table>

    </div>
</div>

@section Scripts {@Scripts.Render("~/bundles/jqueryval")}
